<header>
  <h1 style="color:blue;">Productos</h1>
</header>

{{!-- formulario carga productos --}}
<main>
  <div class="container mt-3">
    <div class="jumbotron">
      <h2 style="color:blue;">Nuevo producto</h2>
      <br />
      <form onsubmit="return addProduct(this)">
        <div class="form-group">
          <label for="title"><b>Nombre</b></label>
          <input
            id="title"
            class="form-control"
            type="text"
            name="title"
            required
          />
        </div>
        <div class="form-group">
          <label for="price"><b>Precio</b></label>
          <input
            id="price"
            class="form-control"
            type="number"
            name="price"
            min="1"
            step="0.01"
            required
          />
        </div>
        <div class="form-group">
          <label for="thumbnail"><b>Url de imagen</b></label>
          <input
            id="thumbnail"
            class="form-control"
            type="url"
            name="thumbnail"
            required
          />
        </div>
        <button class="btn btn-success mt-3 mb-5">Enviar</button>
      </form>
    </div>
  </div>
</main>

{{!-- lista de productos que se van agregando --}}
<aside>
  <div class="container mt-3">
    <div id="products" class="jumbotron">
    <h3>Lista de productos</h3>
    <div class="table-responsive">
      <table class="table table-dark" id="tableOfProducts">
        <thead><tr style="color: yellow;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Thumbnail</th>
          </tr></thead>
        <tbody id="tbproducts"></tbody>
      </table>
    </div>
    </div>
  </div>
  
  {{!-- chat de usuarios --}}
  <div class="container mt-3">
    <div class="jumbotron" id="chat">
    <h3>Centro de mensajes</h3>
    <div id="messages"></div>
    <form
      class="form-inline"
      onsubmit="return addMessage(this)"
      autocomplete="off"
    >
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        class="form-control my-2 mr-2"
        placeholder="Ingresa tu email"
        required
      />
      <label for="message">Mensaje</label>
      <input
        type="text"
        id="message"
        class="form-control my-2 mr-2"
        placeholder="CuÃ©ntanos algo..."
        required
      />
      <input class="btn btn-primary my-2" type="submit" value="Enviar!" />
    </form>
    </div>
  </div>
</aside>
<footer>
  <a href="/products">Ver lista de productos</a>
</footer>
<script src="../index.js"></script>